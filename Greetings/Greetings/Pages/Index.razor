@page "/"

<div class="container-fluid m-0 p-0 d-flex flex-column align-content-center justify-content-center" style="height:100%">    
    <svg style="height:100%;width:100%">        
        <circle cx="50%" cy="50%" r="@(raio)" stroke="white" stroke-width="@(raio *0.05)" fill="@color" />
        <text x="50%" y="50%" text-anchor="middle" alignment-baseline="central" fill="#fff" font-size="@(raio*0.08)px">@Text</text>
    </svg>
</div>

@code {
    double raio {get; set;} = 2;
    string color { get; set; } = "#ff0000";
    string Text = "Feliz 2022"; 

    protected override void OnInitialized()
    {
        Task.Delay(10000);
        Grow();
        base.OnInitialized();
    }

    private async  void Grow()
    {
        for( int i = 1; i < 700; i += 1)
        {
            raio += 1 ;            
            await Task.Delay(1);
            StateHasChanged();
        }
    }
}